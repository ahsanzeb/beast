@article{LufasoAC04,
author = "Lufaso, Michael W. and Woodward, Patrick M.",
title = "{Jahn{--}Teller distortions, cation ordering and octahedral tilting in perovskites}",
journal = "Acta Crystallographica Section B",
year = "2004",
volume = "60",
number = "1",
pages = "10--20",
month = "Feb",
doi = {10.1107/S0108768103026661},
url = {https://doi.org/10.1107/S0108768103026661},
abstract = {In transition metal oxides, preferential occupation of specific {\it d} orbitals on the transition metal ion can lead to the development of a long-range ordered pattern of occupied orbitals. This phenomenon, referred to as orbital ordering, is usually observed indirectly from the cooperative Jahn{--}Teller distortions (CJTDs) that result as a consequence of the orbital ordering. This paper examines the interplay between orbital ordering, octahedral tilting and cation ordering in perovskites. Both ternary {\it AMX}${\sb 3}$ perovskites containing an active Jahn{--}Teller (J{--}T) ion on the octahedral site and quaternary {\it A}${\sb {\it 2}}${\it MM}{$^\prime$}{\it X}${\sb 6}$ perovskites containing a J{--}T ion on one-half of the octahedral sites have been examined. In {\it AMX}${\sb 3}$ perov{\-}skites, the tendency is for the occupied 3{\it d}${\sb 3{\it x}${\sp 2}$}$${\sb {$-$}{\it r}${\sp 2}$}$ and 3{\it d}${\sb 3{\it z}${\sp 2}$}$${\sb {$-$}{\it r}${\sp 2}$}$ orbitals to order in the {\it ac} plane, as exemplified by the crystal structures of LaMnO${\sb 3}$ and KCuF${\sb 3}$. This arrangement maintains a favorable coordination environment for the anion sites. In {\it AMX}${\sb 3}$ perovskites, octahedral tilting tends to enhance the magnitude of the J{--}T distortions. In {\it A}${\sb 2}${\it MM}{$^\prime$}{\it X}${\sb 6}$ perovskites, the tendency is for the occupied 3{\it d}${\sb 3{\it z}${\sp 2}$}$${\sb {$-$}{\it r}${\sp 2}$}$ orbitals to align parallel to the {\it c} axis. This pattern maintains a favorable coordination environment about the symmetric {\it M}{$^\prime$}-cation site. The orbital ordering found in rock-salt ordered {\it A}${\sb 2}${\it MM}{$^\prime$}{\it X}${\sb 6}$ perovskites is compatible with octahedral rotations about the {\it c} axis (Glazer tilt system {\it a}${\sp 0}${\it a}${\sp 0}${\it c}${\sp {$-$}}$) but appears to be incompatible with GdFeO${\sb 3}$-type octahedral tilting (tilt system {\it a}${\sp {$-$}}${\it b}${\sp +}${\it a}${\sp {$-$}}$).},
keywords = {Jahn-Teller, octahedral tilting, cation ordering, orbital ordering, perovskites},
}

