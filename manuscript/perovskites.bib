@article{ThomasAC96,
author = "Thomas, N. W.",
title = "{The compositional dependence of octahedral tilting in orthorhombic and tetragonal perovskites}",
journal = "Acta Crystallographica Section B",
year = "1996",
volume = "52",
number = "1",
pages = "16--31",
month = "Feb",
doi = {10.1107/S0108768195006100},
url = {https://doi.org/10.1107/S0108768195006100},
abstract = {A new parameterization is defined for the quantitative description of octahedral tilting in orthorhombic and tetragonal perovskites. It contains six parameters, {\it s}${\sb 1}$, {\it s}${\sb 2}$, {\it s}${\sb 3}$, {\it {$\theta$}${\sb x}$}, {\it {$\theta$}${\sb y}$} and {\it {$\theta$}${\sb z}$}. {\it s}${\sb 1}$, {\it s}${\sb 2}$ and {\it s}${\sb 3}$ refer to the lengths of the lines or `stalks' joining pairs of opposite octahedral vertices, and {\it {$\theta$}${\sb x}$}, {\it {$\theta$}${\sb y}$} and {\it {$\theta$}${\sb z}$} to the angles subtended by these stalks with pseudo-cubic axes {\it x}, {\it y} and {\it z}. An equation is derived for the dependence of polyhedral volume ratio, {\it V${\sb a}$} / {\it V${\sb B}$}, on these parameters: {\it V${\sb a}$} / {\it V${\sb B}$} = 6cos${\sp 2}${\it {$\theta$}${\sb m}$} cos {\it {$\theta$}${\sb z}$} {$-$} 1, where {\it {$\theta$}${\sb m}$} = ({\it {$\theta$}${\sb x}$} + {\it {$\theta$}${\sb y}$})/2. To a good approximation, lengths {\it s}${\sb 1}$, {\it s}${\sb 2}$ and {\it s}${\sb 3}$ do not affect {\it V${\sb a}$} / {\it V${\sb B}$}. The validity of this equation is tested by reference to the known crystal structures of 48 ternary oxide and fluoride perovskites, and its versatility demonstrated by application to the structures of some ternary palladium and platinum hydrides. The relationship of the approach to Glazer's system of nomenclature for octahedral tilting in perovskites is considered, in particular concerning the numbers of tilts operative in a given structure. A comparison is also made with the parameterization proposed for octahedral tilting and distortion in rhombohedral perovskites [Thomas & Beitollahi (1994). {\it Acta Cryst.} B{\bf 50}, 549{--}560]. Factors governing the choice of rhombohedrai or orthorhombic symmetry are discussed, with the significance of rhombohedral symmetry in obtaining ferroelectric properties brought out. Through the compilation of a table of {\it A}O${\sb 12}$ and {\it B}O${\sb 6}$ polyhedral volumes, the prospect is identified of predicting both the degree of octahedral tilting and the likelihood of ferroelectric behaviour for novel, hypothetical oxide compositions.},
}


@article{WoodwardAC97a,
author = "Woodward, P. M.",
title = "{Octahedral Tilting in Perovskites. I. Geometrical Considerations}",
journal = "Acta Crystallographica Section B",
year = "1997",
volume = "53",
number = "1",
pages = "32--43",
month = "Feb",
doi = {10.1107/S0108768196010713},
url = {https://doi.org/10.1107/S0108768196010713},
abstract = {The 23 Glazer tilt systems describing octahedral tilting in perovskites have been investigated. It is shown that in tilt systems {\it a}${\sp +}${\it a}${\sp +}${\it a}${\sp {$-$}}$, {\it a}${\sp +}${\it b}${\sp +}${\it b}${\sp {$-$}}$, {\it a}${\sp +}${\it a}${\sp +}${\it c}${\sp {$-$}}$, {\it a}${\sp +}${\it b}${\sp +}${\it c}${\sp {$-$}}$, {\it a}${\sp 0}${\it b}${\sp +}${\it b}${\sp {$-$}}$ and {\it a}${\sp 0}${\it b}${\sp +}${\it c}${\sp {$-$}}$ it is not possible to link together a three-dimensional network of perfectly rigid octahedra. In these tilt systems small distortions of the octahedra must occur. The magnitude of the distortions in the {\it a}${\sp +}${\it a}${\sp +}${\it a}${\sp {$-$}}$ and {\it a}${\sp 0}${\it b}${\sp +}${\it b}${\sp {$-$}}$ tilt systems are estimated. A table of predicted space groups for ordered perovskites, {\it A}${\sb 2}${\it MM{$^\prime$}}O${\sb 6}$, for all 23 tilt systems is also given.},
}


@article{WoodwardAC97b,
author = "Woodward, P. M.",
title = "{Octahedral Tilting in Perovskites. II. Structure Stabilizing Forces}",
journal = "Acta Crystallographica Section B",
year = "1997",
volume = "53",
number = "1",
pages = "44--66",
month = "Feb",
doi = {10.1107/S0108768196012050},
url = {https://doi.org/10.1107/S0108768196012050},
abstract = {The 23 Glazer tilt systems describing octahedral tilting in perovskites have been investigated. The various tilt systems have been compared in terms of their {\it A}-cation coordination and it is shown that those tilt systems in which all the {\it A}-cation sites remain crystallographically equivalent are strongly favored, when all the {\it A} sites are occupied by the same ion. Calculations based on both ionic and covalent models have been performed to compare the seven equivalent {\it A}-site tilt systems. Both methods predict that when the tilt angles become large, the orthorhombic {\it a}${\sp +}${\it b}${\sp {$-$}}${\it b}${\sp {$-$}}$ tilt system will result in the lowest energy structure. This tilt system gives the lowest energy structure because it maximizes the number of short {\it A}{---}O interactions. The rhombohedral {\it a}${\sp {$-$}}${\it a}${\sp {$-$}}${\it a}${\sp {$-$}}$ tilt system gives a structure with a slightly lower Madelung energy, but increased ion{--}ion repulsions destabilize this structure as the tilt angles increase. Consequently, it is stabilized by highly charged {\it A} cations and small to moderate tilt angles. The ideal cubic {\it a}${\sp 0}${\it a}${\sp 0}${\it a}${\sp 0}$ tilt system is only observed when stabilized by oversized {\it A} cations and/or {\it M}{---}O {$\pi$}-bonding. Tilt systems with nonequivalent {\it A}-site environments are observed when at least two {\it A} cations with different sizes and/or bonding preferences are present. In these compounds the ratio of large-to-small cations dictates the most stable tilt system.},
}

